<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/id_albumImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_albumart"
        android:layout_marginEnd="10dp"/>

    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/id_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INIT TITLE"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="false"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/bold"
            android:layout_marginBottom="2dp"/>
        <TextView
            android:id="@+id/id_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Init Duration"
            android:textSize="12sp"
            android:layout_marginEnd="5dp"
            android:layout_below="@id/id_title"
            android:fontFamily="@font/medium"/>
        <TextView
            android:id="@+id/id_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Init Artist"
            android:layout_toEndOf="@+id/id_duration"
            android:textSize="12sp"
            android:layout_below="@id/id_title"
            android:fontFamily="@font/medium"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/id_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_dot"
        android:layout_marginStart="10dp"/>
</LinearLayout>